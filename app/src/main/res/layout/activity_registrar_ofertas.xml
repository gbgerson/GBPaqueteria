<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
android:orientation="vertical"
tools:context=".admin.RegistrarOfertasActivity">
<TextView
    android:id="@+id/texto"
    android:textSize="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ingrese su Oferta"
    android:gravity="center"
    android:layout_centerHorizontal="true">
</TextView>
<EditText
    android:id="@+id/edtFileName"
    android:layout_width="match_parent"
    android:layout_below="@+id/texto"
    android:layout_height="wrap_content"
    android:hint="Oferta"></EditText>
<EditText
    android:id="@+id/edtDescription"
    android:layout_width="match_parent"
    android:layout_marginTop="55dp"
    android:layout_height="wrap_content"
    android:hint="Descripcion"></EditText>


<ImageView
    android:id="@+id/image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/progress_bar"
    android:layout_below="@+id/edtDescription"
    android:layout_marginTop="16dp" />

<ProgressBar
    android:id="@+id/progress_bar"
    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/btnSubir"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="16sp" />

<Button
    android:id="@+id/btnSubir"
    android:layout_width="135dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="210dp"
    android:layout_marginBottom="22dp"
    android:text="Subir Oferta"></Button>

<Button
    android:id="@+id/btnEligeImagen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/btnSubir"
    android:layout_marginStart="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="-49dp"
    android:text="Buscar Archivo"></Button>


</RelativeLayout>